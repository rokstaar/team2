	<!-- 찜하기 -->
	<update id="likeProd">
		UPDATE PRODUCT SET PRODUCT_FAVORITE = PRODUCT_FAVORITE + 1
		WHERE PRODUCT_NUM = #{PRODUCT_NUM}
	</update>
	<!-- 찜하기 -->
</mapper>


